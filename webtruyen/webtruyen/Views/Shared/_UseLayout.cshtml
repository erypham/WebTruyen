        </div>
    </div>

    <script src='https://code.jquery.com/jquery-3.2.1.min.js'>
    </script>
    <script>
        $('.message-1 a').click(function () { $('form').animate({ height: "toggle", opacity: "toggle" }, "slow"); });
        $('.message a').click(function () { $('form').animate({ height: "toggle", opacity: "toggle" }, "slow"); });
