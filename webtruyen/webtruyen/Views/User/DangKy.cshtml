@model webtruyen.Models.RegisterViewModel

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_RegisterLayout.cshtml";
}

<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                        </div>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">

                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <form class="user">

                                    <div class="form-group">
                                        <input type="email" name="Email" class="form-control form-control-user"
                                               placeholder="Email">
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <input type="text" name="DisplayName" class="form-control form-control-user"
                                               placeholder="User">
                                        @Html.ValidationMessageFor(model => model.DisplayName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <input type="password" name="Password" class="form-control form-control-user"
                                               placeholder="Password">
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <input type="password" name="ConfirmPassword" class="form-control form-control-user"
                                               placeholder="Repeat Password">
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                    </div>

                                    <input type="submit" value="Đăng ký" class="btn btn-primary btn-user btn-block">

                                    <hr>
                                    @ViewBag.Fail
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" href="../User/DangNhap">Already have an account? Login!</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>

