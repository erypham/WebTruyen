@model webtruyen.Models.CHUONGTRUYEN

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Chi Tiết Chương Truyện</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                Chi Tiết
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tên Chương</th>
                            <th>Tên Phụ</th>
                            <th>Nội Dung</th>
                            <th>Lượt Xem</th>
                            <th>Mã Truyện</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>@Html.DisplayFor(model => model.TENCHUONG)</td>
                            <td> @Html.DisplayFor(model => model.TENPHU)</td>
                            <td>@Html.DisplayFor(model => model.NOIDUNG)</td>
                            <td>@Html.DisplayFor(model => model.LUOTXEM)</td>
                            <td>@Html.DisplayFor(model => model.MATRUYEN)</td>
                            <td></td>

                        </tr>
                        <p>
                            @Html.ActionLink("Chỉnh Sửa", "Edit", new { machuong = Model.MACHUONG }, new { @class = "btn btn-success" }) |
                            @Html.ActionLink("Trở Về", "ds_chuong")
                        </p>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
            </div>
<!-- End of Main Content -->
<!-- Footer -->
<footer class="sticky-footer bg-white">
    <div class="container my-auto">
        <div class="copyright text-center my-auto">
            <span>Copyright &copy; Your Website 2020</span>
        </div>
    </div>
</footer>
<!-- End of Footer -->
        </div>
