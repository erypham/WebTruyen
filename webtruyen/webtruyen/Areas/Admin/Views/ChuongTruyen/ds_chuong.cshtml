@model IEnumerable<webtruyen.Models.CHUONGTRUYEN>

@{
    ViewBag.Title = "ds_chuong";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">Danh Sách Chương Truyện</h1>


            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <p>
                            @Html.ActionLink("Thêm Chương", "Create")
                        </p>
                    </h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>
                                        Tên Chương
                                    </th>
                                    <th>
                                        Tên Phụ
                                    </th>
                                    <th>
                                        Mã Truyện
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TENCHUONG)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TENPHU)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MATRUYEN)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Chỉnh Sửa", "Edit", new { machuong = item.MACHUONG }, new { @class = "btn btn-warning" }) |
                                            @Html.ActionLink("Chi Tiết", "Details", new { machuong = item.MACHUONG }, new { @class = "btn btn-success" }) |
                                            @Html.ActionLink("Xóa", "Delete", new { machuong = item.MACHUONG }, new { @class = "btn btn-danger", onclick = "return confirm('Bạn có muốn xóa không ?')" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->
    <!-- Footer -->
    <footer class="sticky-footer bg-white">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright &copy; Your Website 2020</span>
            </div>
        </div>
    </footer>
    <!-- End of Footer -->

</div>
<!-- End of Content Wrapper -->
